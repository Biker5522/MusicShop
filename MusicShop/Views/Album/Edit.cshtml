@model Album
@{
    ViewData["Title"] = "Add";
}

<form method="post" asp-action=Edit>
    <div class="border p-3 mt-4" style="font-weight:bold">
        <div class="row pb-2">
            <div class="text-primary">Edit Album</div>
        </div>

        <div class="mb-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Band">Band</label>
            <input asp-for="Band" class="form-control" />
             <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Genre">Genre</label>
            <input asp-for="Genre" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Year">Year</label>
            <input asp-for="Year" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success" style="width:150px">Update</button>
        <a asp-controller="Album" asp-action="Index" class="btn btn-info" style="width:200px">Back to list</a>
    </div>

</form>

