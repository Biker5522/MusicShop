@using MusicS.Utility
<!DOCTYPE html>
<html lang="en">
<head>
  
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusicShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootswatch.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.11.4/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/MusicShop.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Sedgwick+Ave&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container-fluid">
    <a class="navbar-brand" href="#" style="font-family:Sedgwick-ave;padding-left:10px;font-size:25px;">MusicShop</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
           <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            <span class="visually-hidden">(current)</span>
          </a>
        </li>

        @if (User.IsInRole(SD.Role_Admin))
        {
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Manager</a>
          <div class="dropdown-menu">
            <a class="dropdown-item " asp-area="Admin" asp-controller="Genre" asp-action="Index">Genre</a>
       <a class="dropdown-item " asp-area="Admin" asp-controller="Album" asp-action="Index">Album</a>
          </div>
               </li>
                 }
        <li class="nav navbar-nav">
            <a class=nav-link asp-area="Customer" asp-controller="Cart" asp-action="Index">
                <i class="bi bi-bag"></i>
            </a>
        </li>

   
      </ul>
      <partial name="_LoginPartial" />
    </div>

  </div>
</nav>

       
    </header>
    <div class="container">
        <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src=" //cdn.datatables.net/1.11.4/js/jquery.dataTables.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
 </div>>
   <footer class="page-footer font-small blue fixed-bottom" style="background-color: rgba(0, 0, 0, 0.2);">

  <div class="footer-copyright text-center py-3" style="background-color: rgba(0, 0, 0, 0.2);color:white">© 2022 Copyright: Dawid Cichy
   
  </div>


</footer>
</body>

</html>
