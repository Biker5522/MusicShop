@model IEnumerable<MusicS.Models.Album>

<div class="text-center">
    @foreach (var album in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                <div class="card">
                    <img src="@album.ImageUrl" class="card-img-top rounded" />
                    <div class="card-body">
                    <div class="pl-1">
                        <p class="card-title h5 text-primary">@album.Title </p>
                        <p class="card-title h5 text-info">@album.Band </p>
                        <p class="card-title h5 text-primary">@album.Genre </p>
                </div> 
                <div class="pl-1">
                        <p>List Price:<strike><b>$@album.ListPrice.ToString("0.00")</b> </strike> </p>
                        <p>Price:<b>$@album.Price.ToString("0.00")</b> </p>
                </div> 
                </div>
                        <div>
                            <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@album.Id">
                                Details
                            </a>
                            
                        </div>
            </div>
        </div>
        </div>
    }
    </div>
