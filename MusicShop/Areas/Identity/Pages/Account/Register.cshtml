@page
@model RegisterModel

<div class="row" style="padding-top:5%; padding-bottom:7%" >
    <div class="col-4" style="background-color:black" >
         <div class="text-white text-center" style="padding-top:15%">
            <h2 class="text-white" >Application Register Page</h2>
            <p>Login from here to access.</p>
         </div>
         </div>
          <div class="col-6" >
    
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating py-2">
                <input asp-for="Input.Name" class="form-control"  aria-required="true" />
                <label asp-for="Input.Name"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <input asp-for="Input.Email" class="form-control"  aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating py-2" style="padding-top:1%">
                <input asp-for="Input.Password" class="form-control"  aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating py-2" style="padding-top:2% ;padding-bottom:1%">
                <input asp-for="Input.ConfirmPassword" class="form-control"  aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            
            <div class="form-floating py-2">
                <input asp-for="Input.Adress" class="form-control"  aria-required="true" />
                <label asp-for="Input.Adress"></label>
                <span asp-validation-for="Input.Adress" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <input asp-for="Input.PostalCode" class="form-control"  aria-required="true" />
                <label asp-for="Input.PostalCode"></label>
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <input asp-for="Input.City" class="form-control"  aria-required="true" />
                <label asp-for="Input.City"></label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <input asp-for="Input.PhoneNumber" class="form-control"  aria-required="true" />
                <label asp-for="Input.PhoneNumber"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                <option disabled selected>--Select Role--</option>
                </select>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div> 
   
</div  >

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
